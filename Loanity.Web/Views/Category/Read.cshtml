@model List<Loanity.Domain.Dtos.CategoryDto>
@{
    ViewData["Title"] = "Categories";
}
<h2>Categories</h2>
<a asp-action="Create" class="btn btn-primary">+ Add Category</a>
<table class="table">
    <thead>
        <tr><th>Name</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@cat.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
