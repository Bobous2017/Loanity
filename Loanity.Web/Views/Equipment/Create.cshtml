@model Loanity.Domain.Dtos.EquipmentDto

<h2>Create Equipment</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Serial Number</label>
        <input asp-for="SerialNumber" />
    </div>
    <div>
        <label>QR Code</label>
        <input asp-for="QrCode" />
    </div>
    <div>
        <label>Status</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Loanity.Domain.Statuses.EquipmentStatus>()"></select>
    </div>
    <div>
        <label>Category</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
