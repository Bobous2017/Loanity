@model Loanity.Domain.Dtos.EquipmentDto
@{
    ViewData["Title"] = "Delete Equipment";
}

<h2>Delete Equipment</h2>
<p class="text-danger">Are you sure you want to delete this item?</p>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Serial Number</dt>
        <dd class="col-sm-9">@Model.SerialNumber</dd>

        <dt class="col-sm-3">QR Code</dt>
        <dd class="col-sm-9">@Model.QrCode</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Read" class="btn btn-secondary">Cancel</a>
</form>
