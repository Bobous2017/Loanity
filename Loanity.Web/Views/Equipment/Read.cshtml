@model List<Loanity.Domain.Dtos.EquipmentDto>

@{
    ViewData["Title"] = "Equipment in " + ViewBag.CategoryName;
}

<h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Equipment in @ViewBag.CategoryName</h2>
<div class="mb-6 flex gap-4">
    <a asp-action="Create"
       class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700">
        + Create New Equipment
    </a>
    <a asp-controller="Category" asp-action="Create"
     class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100">
      + Add New Category
  </a>

</div>

<a asp-controller="Home" asp-action="Index"
   class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 mb-4 inline-block">
    ← Back to Categories
</a>
@* When it succeds to update  user *@
@if (TempData["Success"] != null)
{
    <div class="alert-message bg-green-100 text-green-800 px-4 py-2 rounded mb-4 border border-green-300">
        @TempData["Success"]
    </div>
}

@* When it fails to update  user *@
@if (TempData["Error"] != null)
{
    <div class="alert-message bg-red-100 text-red-800 px-4 py-2 rounded mb-4 border border-red-300">
        @TempData["Error"]
    </div>
}

@* ---------------- Search + Filter Bts---------------- *@
<div id="ByCategoryFilters" class="filters flex items-center gap-2 mb-4 justify-center md:justify-start" role="toolbar" aria-label="Filter equipment by status"
     style="display: flex;flex-direction: row-reverse;align-items: baseline;">
    <button class="dot-btn available" data-filter="available" title="Available" aria-pressed="false"></button>
    <button class="dot-btn loaned" data-filter="loaned" title="Loaned" aria-pressed="false"></button>
    <button class="dot-btn reserved" data-filter="reserved" title="Reserved" aria-pressed="false"></button>
    <button class="dot-btn damaged" data-filter="damaged" title="Damaged" aria-pressed="false"></button>
    <button class="dot-btn lost" data-filter="lost" title="Lost" aria-pressed="false"></button>

    @* ---------------- Search + Filter Input---------------- *@
    <div class="flex items-center gap-2" style="margin:auto!important; padding-bottom:inherit!important">
        <span class="dot-label">Search</span>
        <input id="searchEquip" type="text" placeholder="Search equipment..."
               class="px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 w-64" />
        <button type="button" class="btn-link p-0" data-clear" data-clear>Clear</button>
    </div>
</div>
<div class="overflow-x-auto bg-white shadow rounded-lg mt-4">
    <table id="equipmentTable" class="table w-full border-collapse">
        <thead class="bg-gray-100 text-gray-700">
            <tr>
                <th class="px-4 py-2 text-left">Name</th>
                <th class="px-4 py-2 text-left">Serial Number</th>
                <th class="px-4 py-2 text-left">QR Code</th>
                <th class="px-4 py-2 text-left">Status</th>
                <th class="px-4 py-2 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var status = item.Status.ToString().ToLowerInvariant();
                <tr class="border-t hover:bg-gray-50" data-status="@status">
                    <td class="px-4 py-2">@item.Name</td>
                    <td class="px-4 py-2">@item.SerialNumber</td>
                    <td class="px-4 py-2">@item.QrCode</td>
                    <td class="px-4 py-2">
                        <span class="px-2 py-1 rounded text-sm
                                @(item.Status == Loanity.Domain.Statuses.EquipmentStatus.Available ? "bg-green-100 text-green-700" :
                                                            item.Status == Loanity.Domain.Statuses.EquipmentStatus.Reserved ? "bg-yellow-100 text-yellow-700" :
                                                            item.Status == Loanity.Domain.Statuses.EquipmentStatus.Lost ? "bg-red-100 text-red-700" :
                                                            "bg-gray-100 text-gray-600")">
                        @item.Status
                    </span>
                </td>
                <td class="px-4 py-2 space-x-2">
                    <a asp-action="Update" asp-route-id="@item.Id"
                       class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded hover:bg-indigo-200 text-sm font-medium">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="px-3 py-1 bg-red-100 text-red-700 rounded hover:bg-red-200 text-sm font-medium"
                       onclick="return confirm('Are you sure you want to delete this item?');">
                        Delete
                    </a>
                </td>
            </tr>
                        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            initColorFilter({
                wrapper: "#ByCategoryFilters",
                table: "#equipmentTable",
                search: "#searchEquip"
            });
        });
    </script>
}
