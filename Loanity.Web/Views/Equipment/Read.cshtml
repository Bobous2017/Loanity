@model List<Loanity.Domain.Dtos.EquipmentDto>

<h2>Read Equipment List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Create New</a>
</p>
<a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-outline-secondary mb-2">+ Add New Category</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Serial Number</th>
            <th>QR Code</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.SerialNumber</td>
                <td>@item.QrCode</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
