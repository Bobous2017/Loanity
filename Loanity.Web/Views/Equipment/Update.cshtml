@model Loanity.Domain.Dtos.EquipmentDto
@{
    ViewData["Title"] = "Update Equipment";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">Update Equipment</h2>

<form asp-action="Update" method="post"
      class="bg-white shadow rounded-lg p-6 space-y-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="CategoryId" class="block font-medium text-gray-700"></label>
        <select asp-for="CategoryId"
                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId))"
                class="w-full border rounded-lg px-3 py-2"></select>
        <span asp-validation-for="CategoryId" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="Name" class="block font-medium text-gray-700"></label>
        <input asp-for="Name" class="w-full border rounded-lg px-3 py-2" />
        <span asp-validation-for="Name" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="SerialNumber" class="block font-medium text-gray-700"></label>
        <input asp-for="SerialNumber" class="w-full border rounded-lg px-3 py-2" />
        <span asp-validation-for="SerialNumber" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="QrCode" class="block font-medium text-gray-700"></label>
        <input asp-for="QrCode" class="w-full border rounded-lg px-3 py-2" />
        <span asp-validation-for="QrCode" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="Status" class="block font-medium text-gray-700"></label>
        <select asp-for="Status"
                asp-items="Html.GetEnumSelectList<Loanity.Domain.Statuses.EquipmentStatus>()"
                class="w-full border rounded-lg px-3 py-2"></select>
        <span asp-validation-for="Status" class="text-red-600"></span>
    </div>

    <div class="flex gap-4 mt-6">
        <button type="submit"
                class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700">
            Save changes
        </button>
        <a asp-action="Read"
           class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
