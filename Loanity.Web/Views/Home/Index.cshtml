@model List<Loanity.Domain.Dtos.EquipmentCategoryDto>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   @*  <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
    <!-- Hero Section -->
    <header class="text-center py-20 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome to Loanity</h1>
    <p class="text-lg mb-6">Manage Users, Equipment, Reservations, and Loans easily.</p>
    <div class="space-x-4">
        <a href="#categories"
           class="px-6 py-3 bg-white text-indigo-600 font-semibold rounded-lg shadow hover:bg-gray-100">
            Explore Categories
        </a>
        <a href="#"
           class="px-6 py-3 bg-indigo-800 text-white font-semibold rounded-lg shadow hover:bg-indigo-900">
            Get Started
        </a>
    </div>
</header>
    <!-- Categories Section -->
    <main class="flex-1 p-10" id="categories">
        <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Equipment Categories</h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-6">
            @foreach (var category in Model)
            {
                <a asp-controller="Equipment"
                   asp-action="ByCategory"
                   asp-route-name="@category.Name"
                   class="block bg-white rounded-xl p-6 text-center hover:shadow-lg transition">

                    
                    <h3 class="font-semibold">@category.Name</h3>
                    @{
                        (string icon, string color) = category.Name.ToLower() switch
                        {
                            "laptops" => ("fa-laptop", "text-indigo-600"),
                            "tablet" => ("fa-tablet-screen-button", "text-green-600"),
                            "phones" => ("fa-mobile", "text-green-600"),
                            "keyboards" => ("fa-keyboard", "text-purple-600"),
                            "mouse" => ("fa-computer-mouse", "text-gray-700"),
                            "printers" => ("fa-print", "text-pink-600"),
                            "storage" => ("fa-hard-drive", "text-yellow-600"),
                            "cameras" => ("fa-camera", "text-red-500"),
                            "headsets" => ("fa-headset", "text-emerald-600"),
                            "networking" => ("fa-network-wired", "text-sky-600"),
                            "cloud" => ("fa-cloud", "text-cyan-600"),
                            "monitors" => ("fa-desktop", "text-indigo-400"),
                            "gaming" => ("fa-gamepad", "text-orange-500"),
                            "accessories" => ("fa-toolbox", "text-orange-500"),
                            "cables" => ("fa-gamepad", "text-orange-500"),
                            _ => ("fa-box", "text-indigo-600")
                        };
                    }
                    <i class="fa-solid @icon fa-2x @color mb-3"></i>


                    <span class="text-sm text-gray-600">Qty: @category.Quantity</span>
                </a>
            }

        </div>
    </main>
</div>
