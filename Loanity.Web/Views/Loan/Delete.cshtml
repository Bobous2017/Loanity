@model Loanity.Domain.Dtos.LoanDto
@{
    ViewData["Title"] = "Delete Loan";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">Delete Loan</h2>

<div class="bg-white shadow rounded-lg p-6 mb-6">
    <p class="mb-4 text-red-600 font-medium">
        Are you sure you want to delete this loan?
    </p>

    <ul class="space-y-2 text-gray-600">
        <li><strong>Loan Id:</strong> @Model.Id</li>
        <li><strong>User Id:</strong> @Model.UserId</li>
        <li><strong>Status:</strong> @Model.Status</li>
    </ul>
</div>

<form asp-action="Delete" method="post" class="flex gap-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit"
            class="px-4 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700">
        Delete
    </button>
    <a asp-action="Read"
       class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">
        Cancel
    </a>
</form>
