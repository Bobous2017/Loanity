@model Loanity.Domain.Entities.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<div>
    <h4>Are you sure you want to delete this reservation?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">Equipment ID</dt>
        <dd class="col-sm-10">@Model.EquipmentId</dd>

        <dt class="col-sm-2">Start</dt>
        <dd class="col-sm-10">@Model.StartAt</dd>

        <dt class="col-sm-2">End</dt>
        <dd class="col-sm-10">@Model.EndAt</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Read" class="btn btn-secondary">Cancel</a>
    </form>
</div>
