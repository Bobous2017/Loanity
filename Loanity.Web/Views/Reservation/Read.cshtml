@model IEnumerable<Loanity.Domain.Entities.Reservation>

@{
    ViewData["Title"] = "All Reservations";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Reservations</h2>

<div class="mb-6 flex gap-4">
    <a asp-action="Create"
       class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700">
        + Create New Reservation
    </a>
</div>

@* ---------------- Search + Filter ---------------- *@
<div id="reservationFilters" class="filters" role="toolbar" aria-label="Filter reservations by status"
style="display: flex;flex-direction: row-reverse;align-items: baseline;">
    <button class="dot-btn active" data-filter="active" title="Active" aria-pressed="false"></button>
    <button class="dot-btn expired" data-filter="expired" title="Expired" aria-pressed="false"></button>
    <button class="dot-btn fulfilled" data-filter="fulfilled" title="Fulfilled" aria-pressed="false"></button>
    <button class="dot-btn pending" data-filter="pending" title="Pending" aria-pressed="false"></button>
   
      @* ---------------- Search + Filter Input---------------- *@
    <div class="flex items-center gap-2" style="margin:auto!important; padding-bottom:inherit!important">
        <span class="dot-label">Search</span>
        <input id="searchReservation" type="text" placeholder="Search reservations..." 
        class="px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 w-64" />
        <button type="button" class="btn-link p-0" data-clear" data-clear>Clear</button>
    </div>
</div>
@* -------------------------------------------------- *@

<div class="overflow-x-auto bg-white shadow rounded-lg">
    <table id="reservationTable" class="w-full border-collapse">
        <thead class="bg-gray-100 text-gray-700">
            <tr>
                <th class="px-4 py-2 text-left">Id</th>
                <th class="px-4 py-2 text-left">User Id</th>
                <th class="px-4 py-2 text-left">Equipment Id</th>
                <th class="px-4 py-2 text-left">Start At</th>
                <th class="px-4 py-2 text-left">End At</th>
                <th class="px-4 py-2 text-left">Status</th>
                <th class="px-4 py-2 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                var status = reservation.Status.ToString().ToLowerInvariant();
                <tr class="border-t hover:bg-gray-50" data-status="@status">
                    <td class="px-4 py-2">@reservation.Id</td>
                    <td class="px-4 py-2">@reservation.UserId</td>
                    <td class="px-4 py-2">@reservation.EquipmentId</td>
                    <td class="px-4 py-2">@reservation.StartAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td class="px-4 py-2">@reservation.EndAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td class="px-4 py-2">
                        <span class="px-2 py-1 rounded text-sm
                            @(reservation.Status == Loanity.Domain.Statuses.ReservationStatus.Active ? "bg-green-100 text-green-700" :
                              reservation.Status == Loanity.Domain.Statuses.ReservationStatus.Expired ? "bg-red-100 text-red-700" :
                              reservation.Status == Loanity.Domain.Statuses.ReservationStatus.Fulfilled ? "bg-green-100 text-green-700" :
                              reservation.Status == Loanity.Domain.Statuses.ReservationStatus.Pending ? "bg-orange-100 text-orange-700" :
                              "bg-gray-100 text-gray-600")">
                            @reservation.Status
                        </span>
                    </td>
                    <td class="px-4 py-2 space-x-2">
                      
                          
                      <a asp-action="Update" asp-route-id="@reservation.Id"
                           class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded hover:bg-indigo-200 text-sm font-medium">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@reservation.Id"
                           class="px-3 py-1 bg-red-100 text-red-700 rounded hover:bg-red-200 text-sm font-medium"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            initColorFilter({
                wrapper: "#reservationFilters",
                table: "#reservationTable",
                search: "#searchReservation"
            });
        });
    </script>
}
