@model Loanity.Domain.Entities.Reservation

@{
    ViewData["Title"] = "Edit Reservation";
}

<h2>Edit Reservation</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EquipmentId"></label>
        <input asp-for="EquipmentId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartAt"></label>
        <input asp-for="StartAt" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndAt"></label>
        <input asp-for="EndAt" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Read" class="btn btn-secondary">Cancel</a>
</form>
