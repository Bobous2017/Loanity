@model List<Loanity.Domain.Entities.Role>
@{
    ViewData["Title"] = "Roles";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary">+ Add Role</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@role.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
