@model Loanity.Domain.Dtos.UserDto
@{
    ViewData["Title"] = "Create User";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">Create User</h2>

<form asp-action="Create" method="post"
      class="bg-white shadow rounded-lg p-6 space-y-4">

    <div>
        <label asp-for="RoleId" class="block font-medium text-gray-700"></label>
        <select asp-for="RoleId" asp-items="ViewBag.Roles"
                class="w-full border rounded-lg px-3 py-2"></select>
    </div>
    <div>
        <label asp-for="FirstName" class="block font-medium text-gray-700"></label>
        <input asp-for="FirstName" class="w-full border rounded-lg px-3 py-2" />
    </div>
    <div>
        <label asp-for="LastName" class="block font-medium text-gray-700"></label>
        <input asp-for="LastName" class="w-full border rounded-lg px-3 py-2" />
    </div>
    <div>
        <label asp-for="UserName" class="block font-medium text-gray-700"></label>
        <input asp-for="UserName" class="w-full border rounded-lg px-3 py-2" />
    </div>
    <div>
        <label asp-for="PassWord" class="block font-medium text-gray-700"></label>
        <input asp-for="PassWord" type="password" class="w-full border rounded-lg px-3 py-2" />
    </div>
    <div>
        <label asp-for="RfidChip" class="block font-medium text-gray-700"></label>
        <input asp-for="RfidChip" class="w-full border rounded-lg px-3 py-2" />
    </div>
    <div>
        <label asp-for="Email" class="block font-medium text-gray-700"></label>
        <input asp-for="Email" class="w-full border rounded-lg px-3 py-2" />
    </div>
    <div>
        <label asp-for="Phone" class="block font-medium text-gray-700"></label>
        <input asp-for="Phone" class="w-full border rounded-lg px-3 py-2" />
    </div>

    <div class="flex gap-4 mt-6">
        <button type="submit"
                class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700">
            Create
        </button>
        <a asp-action="Read"
           class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">
            Cancel
        </a>
    </div>
</form>
