@model List<Loanity.Domain.Dtos.UserDto>
@{
    ViewData["Title"] = "User List";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">User List</h2>

<div class="flex gap-4 mb-6">
    <a asp-action="Create"
       class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700">
        + Add User
    </a>
    <a asp-controller="Role" asp-action="Read"
       class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100">
        Manage Roles
    </a>
</div>

<div class="overflow-x-auto bg-white shadow rounded-lg">
    <table class="w-full border-collapse">
        <thead class="bg-gray-100 text-gray-700">
            <tr>
                <th class="px-4 py-2 text-left">First Name</th>
                <th class="px-4 py-2 text-left">Last Name</th>
                <th class="px-4 py-2 text-left">Email</th>
                <th class="px-4 py-2 text-left">Phone</th>
                <th class="px-4 py-2 text-left">Role</th>
                <th class="px-4 py-2 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="border-t hover:bg-gray-50">
                    <td class="px-4 py-2">@user.FirstName</td>
                    <td class="px-4 py-2">@user.LastName</td>
                    <td class="px-4 py-2">@user.Email</td>
                    <td class="px-4 py-2">@user.Phone</td>
                    <td class="px-4 py-2">@user.RoleName</td>
                    <td class="px-4 py-2">
                        <a asp-action="Update" asp-route-id="@user.Id"
                           class="text-indigo-600 hover:underline">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@user.Id"
                           class="text-red-600 hover:underline">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
